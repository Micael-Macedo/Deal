@model IEnumerable<Deal.Models.NotaCliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Avaliação
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Avaliacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NotaClienteId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.NotaClienteId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.NotaClienteId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
