@model IEnumerable<Deal.Models.Acordo>
@{
    ViewData["Title"] = "Acordos Cliente";
}

<h1>@ViewData["Title"]</h1>
<a asp-action="Home" asp-controller="Clientes" asp-route-id="@ViewBag.ClienteId" class="btn btn-info">Retornar a pagina
    inicial</a>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var item in Model)
    {
        <div class="serviceCard">
            <div class="serviceCard-Content">
                <dl class="row">
                    <dt class="col-sm-3">
                        Acordo:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(modelItem => item.AcordoId)
                    </dd>
                    <dt class="col-sm-3">
                        Servi√ßo:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(modelItem => item.Servico.Nome)
                    </dd>
                    <dt class="col-sm-3">
                        Categoria:
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(modelItem => item.Servico.Categoria.Atuacao)
                    </dd>
                </dl>
            </div>
            <div class="serviceCardButtons">
                <a asp-action="AcordoCliente" asp-route-id="@item.AcordoId" class="btn btn-info">Ver mais</a>
            </div>
        </div>
    }
</div>
