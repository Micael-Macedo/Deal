@model IEnumerable<Deal.Models.Acordo>
@{
    ViewData["Title"] = "Acordos Cliente";
}


<div class="titulo_formulario_index centralizar">
    <h1 style="font-weight: 840; font-size: 45px;">Seus acordos</h1>
</div>
<div class="centralizar">

</div>

<div class="container centralizar">
    <div class="Cliente-acordo">
        <div class="table">
            @foreach (var item in Model)
            {
                <div class="serviceCard">
                    <div class="serviceCard-Content">
                        <dl class="row">
                            <dt class="col-sm-3">
                                Acordo:
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(modelItem => item.AcordoId)
                            </dd>
                            <dt class="col-sm-3">
                                Servi√ßo:
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(modelItem => item.Servico.Nome)
                            </dd>
                            <dt class="col-sm-3">
                                Categoria:
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(modelItem => item.Servico.Categoria.Atuacao)
                            </dd>
                        </dl>
                    </div>
                    <div class="serviceCardButtons">
                        <a asp-action="AcordoCliente" asp-route-id="@item.AcordoId" class="btn btn-info">Ver mais</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
