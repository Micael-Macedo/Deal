@model Deal.Models.Acordo
@{
    ViewData["Title"] = "Avaliação Cliente";
}

<h1>@ViewData["Title"]</h1>

<div>
    <div class="Prestador-Card-Avaliacao">
        <img src="@Model.Servico.Cliente.FotoUsuario" alt="" srcset="" width="200px" height="200px">
    </div>
    <form asp-action="AvaliacaoDoCliente" method="post">
        <input type="hidden" asp-for="AcordoId" />
        <label for="">Como você avalia @Model.Servico.Cliente.Nome ?</label>
        <div class="AvalicaoAcordo">
            <input name="nota" value="1" type="radio">
            <input name="nota" value="2" type="radio">
            <input name="nota" value="3" type="radio">
            <input name="nota" value="4" type="radio">
            <input name="nota" value="5" type="radio">
        </div>
        <button type="submit" class="btn btn-primary">Avaliar</button>
    </form>
</div>