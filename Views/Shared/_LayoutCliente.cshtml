@{
    Cliente cliente = ViewBag.Cliente;
}
<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Deal</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/Deal.styles.css" asp-append-version="true" />
        <link rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,700;0,800;0,900;1,700;1,800;1,900&display=swap"
            rel="stylesheet">
    </head>

    <body>
        <nav class="div-navbar">
            <div class="container-fluid" style="width: 100%;display: flex; height: 80px;">
                <div class="navbar">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"
                        asp-route-id="@cliente.ClienteId" asp-route-user="Cliente"><img src="~/img/LOGO_DEAL.svg" alt=""
                            srcset="" style="width: 80px"></a>
                </div>
                <div class="navbar container-fluid" style="background-color: blueviolet;">
                    <ul class="div-navbar">
                        <div style="align-items: left; justify-content: left;display: flex">
                            <li class="navbar-brand">
                                <a class="" style="color: white;" asp-area="" asp-controller="Acordo"
                                    asp-action="AcordosCliente" asp-route-id="@cliente.ClienteId">Ver Acordos</a>
                            </li>
                            <li class="navbar-brand">
                                <a class="" style="color: white;" asp-controller="Servicos" asp-action="MeusServicos"
                                    asp-route-id="@cliente.ClienteId">Ver servi√ßos</a>
                            </li>
                            <li class="navbar-brand">
                                <a class="" asp-area="" style="color: white;" asp-controller="Clientes"
                                    asp-action="Home" asp-route-id="@cliente.ClienteId">@cliente.Nome
                                </a>
                            </li>
                        </div>
                        <div style="align-items: right; justify-content: right;display: flex;margin: 40px;">
                            <div>
                                <li class="btn-login-tela">
                                    <a class="" asp-area="" asp-controller="Home" asp-action="index">Sair</a>
                                </li>
                            </div>
                        </div>
                    </ul>
                </div>
                <div id="Mobile-Nav">
                    <button>Mobile</button>
                    <ul>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Servicos" asp-action="Index">Servico</a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Clientes" asp-action="Index">Cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Prestadores" asp-action="Index">Prestadores</a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="Acordo" asp-action="Index">Acordo</a>
                        </li>
                        <li class="nav-item">
                            <a class="" asp-area="" asp-controller="AreaAtuacao" asp-action="Index">Tipos de
                                Servicos</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        </header>
        <div>
            <main role="main" class="pb-3">
            @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2022 - Deal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBsX6svrvjA0smTUMT2SJa7QqCQRfrNRZA&libraries=places&callback=initMap&solution_channel=GMP_QB_addressselection_v1_cAB"
            async defer></script>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </body>

</html>
