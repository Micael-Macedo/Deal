@model Deal.Models.LocalDoPrestador

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LocaisDoPrestador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <button type="button" class="add_form_locais">Adicionar mais campos &nbsp;
                    <span>+</span>
                </button>
            </div>
            <div class="locaisForm">
                <label asp-for="Cidade" class="control-label"></label>
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="PrestadorFk" value="@ViewBag.PrestadorFkLocal">
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

