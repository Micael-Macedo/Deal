@model Deal.Models.LocalDoPrestador

@{
    ViewData["Title"] = "Adicionar Locais";
}

<div class="centralizar">
    <div class="container_delete">
        <h1 style="font-weight: 840; font-size: 45px; margin-bottom: 10px;">Adicionar Locais</h1>
        <h5>Aqui você poderá adiconar locais em que prestar serviços</h5>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="AdicionarLocais">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <button type="button" class="add_form_locais">Adicionar mais campos &nbsp;
                            <span>+</span>
                        </button>
                    </div>
                    <div class="locaisForm">
                        <label asp-for="Cidade" class="control-label"></label>
                        <span asp-validation-for="Cidade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input hidden asp-for="PrestadorFk" value="@ViewBag.PrestadorFkLocal">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-roxo-escuro" style="margin-left: 0px;" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
