@model Deal.Models.Certificado

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar</h1>

<h4>Certificado</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden name="FkPortfolio" value="@ViewBag.portfolioIdCertificado" class="form-control" />
            <div class="form-group">
                <input type="file" class="form-control" onchange="ConverterImagem()" id="NewFoto">
                <input asp-for="CertificadoFotoPortfolio" type="hidden" id="FotoBase64"/>
                <div id="apresentar-imagem" style="width: 200px; height: 200px;"></div>
                <label asp-for="CertificadoFotoPortfolio" class="control-label"></label>
                <span asp-validation-for="CertificadoFotoPortfolio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

