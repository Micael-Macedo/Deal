@model Deal.Models.Cliente

@{
    ViewData["Title"] = "Editar";
}

<div class="container">
    <div class="titulo_formulario">
    <h1 style="font-weight: 840; font-size: 45px;">Editar cliente</h1>
</div>

@* <a asp-action="Home" asp-controller="Clientes" asp-route-id="@Model.ClienteId" class="btn btn-info">Retornar a pagina inicial</a> *@
<hr />
  <div class="container_formulario">
    <div style="width: 800px;">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClienteId" />
            <div class="imagem_formulario">
                <label class="control-label" style="font-weight: 600; color: blueviolet;">Foto</label>
                <input type="file" class="form-control" onchange="ConverterImagem()" id="NewFoto">
                <input asp-for="FotoUsuario" type="hidden" id="FotoBase64" />
                <span asp-validation-for="FotoUsuario" class="text-danger"></span>
                <div id="apresentar-imagem" class="apresentar-imagem"></div>
            </div>

            <div class="item_formulario">
                <label asp-for="Nome" class="control-label" style="font-weight: 600; margin-bottom: 10px;"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="item_formulario">
                <label class="control-label" style="font-weight: 600; margin-bottom: 10px;">CPF</label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>

            <div class="item_formulario">
                <label asp-for="Idade" class="control-label" style="font-weight: 600; margin-bottom: 10px;"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>

            <div class="item_formulario">
                <label class="control-label" style="font-weight: 600; margin-bottom: 10px;">Endere√ßo</label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <div class="item_formulario">
                <label class="control-label" style="font-weight: 600; margin-bottom: 10px;">CEP</label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>

            <div class="item_formulario">
                <label asp-for="Telefone" class="control-label" style="font-weight: 600; margin-bottom: 10px;"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="item_formulario">
                <label asp-for="Senha" class="control-label" style="font-weight: 600; margin-bottom: 10px;"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>

            <div class="item_formulario">
                <label asp-for="Email" class="control-label" style="font-weight: 600; margin-bottom: 0px;"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="botao_formulario">
                <input type="submit" value="Atualizar" class="botao_formulario" style="font-weight: 600; margin-bottom: 10px;" />
            </div>

            <div class="botao_formulario2">
                <input type="submit" value="Retornar" asp-action="Index" class="botao_formulario" style="font-weight: 600; background-color: #b780e7;"/>
            </div>
        </form>
    </div>
</div>


