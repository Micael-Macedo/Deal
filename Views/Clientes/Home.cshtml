@model Deal.Models.Cliente
@{
    ViewData["Title"] = "Home";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Foto
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.FotoUsuario)" alt="" width="300px">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            CPF
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2">
            CEP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Senha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Acordos Realizados
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdAcordoRealizados)
        </dd>
        <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-info" style="width: 200px;">Editar Perfil</a>
        <a asp-action="Details" asp-route-id="@Model.ClienteId" class="btn btn-info" style="width: 200px;">Ver Perfil</a>
        <a asp-action="Create" asp-controller="Servicos" asp-route-id="@Model.ClienteId" class="btn btn-success" style="width: 200px;">Criar Serviço</a>
        <a asp-action="MeusServicos" asp-controller="Servicos" asp-route-id="@Model.ClienteId" class="btn btn-info" style="width: 200px;">Ver Serviços</a>
        <a asp-action="AcordosCliente" asp-controller="Acordo" asp-route-id="@Model.ClienteId" class="btn btn-info" style="width: 200px;">Ver Acordos</a>
        <a asp-action="Delete" asp-route-id="@Model.ClienteId" class="btn btn-danger" style="width: 200px;">Deletar Conta</a>
    </dl>
</div>