@using Deal.Enum
@model Usuario
@{
}


<div class="container1 container loginPage">
    <section class="container section-form">
        <div>
            <div class="titulo_formulario_login">
                <h1 style="font-weight: 840;">Seja agora um
                    <br><span class="roxo">cliente</span> ou <span class="roxo">profissional</span>
            </div>

            <form asp-controller="Usuarios" asp-action="Entrar" method="post" class="formulario">
                <div class="item_formulario">
                    <label class="control-label" style="font-weight: 600;">Email</label>
                    <input id="email" name="email" type="text" placeholder="Email">
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="item_formulario">
                    <label class="control-label" style="font-weight: 600;">Senha</label>
                    <input id="senha" name="senha" type="password" asp-for="Senha" placeholder="Senha">
                    @Html.ValidationMessageFor(x => x.Senha)
                </div>
                <div class="form-group">
                <label for="nome" class="form-label">Perfil</label>
                <select asp-for="Perfil">
                    <option value="0">Selecione</option>
                    <option value="1">Cliente</option>
                    <option value="2">Prestador</option>
                </select>
            </div>
                <button class="btn-login">Login</button>   
            </form>
            <a asp-controller="Home" asp-action="criarConta"><button class="btn-login">Criar conta</button></a>
        </div>
    </section>
</div>