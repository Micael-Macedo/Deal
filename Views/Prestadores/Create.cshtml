@model Deal.Models.Prestador

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Prestador</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FotoPrestador" class="control-label"></label>
                <input type="file" class="form-control" onchange="ConverterImagem()" id="NewFoto">
                <input asp-for="FotoPrestador" type="hidden" id="FotoBase64" />
                <span asp-validation-for="FotoPrestador" class="text-danger"></span>
                <div id="apresentar-imagem" style="width: 10%; height: 10%;"></div>
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idade" class="control-label"></label>
                <input asp-for="Idade" class="form-control" />
                <span asp-validation-for="Idade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cep" class="control-label"></label>
                <input asp-for="Cep" class="form-control" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3 area_atuacao">
                <div class="row align-items-start">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="eletrica" id="eletrica">
                            <label class="form-check-label" for="flexCheckDefault">
                                Elétrica
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="mecanica" id="mecanica">
                            <label class="form-check-label" for="flexCheckChecked">
                                Mecânica
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="carreto" id="carreto">
                            <label class="form-check-label" for="flexCheckDefault">
                                Carreto
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row align-items-start">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="manutencao_de_computadores"
                                id="manutencao_de_computadores">
                            <label class="form-check-label" for="flexCheckChecked">
                                Informática
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="pintura" id="pintura">
                            <label class="form-check-label" for="flexCheckDefault">
                                Pintura
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="macenaria" id="macenaria">
                            <label class="form-check-label" for="flexCheckChecked">
                                Macenaria
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row align-items-start">
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="hidraulica" id="hidraulica">
                            <label class="form-check-label" for="flexCheckChecked">
                                Hidráulica
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="eletronica" id="eletronica">
                            <label class="form-check-label" for="flexCheckChecked">
                                Eletrônica
                            </label>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="servicos_gerais"
                                id="servicos_gerais">
                            <label class="form-check-label" for="flexCheckChecked">
                                Serviços gerais
                            </label>
                        </div>
                    </div>
                </div>

                @foreach (var item in ViewData["AreaAtuacao"] as IList<AreaAtuacao>)
                {
                    <input type ="checkbox" value="@item.AreaAtuacaoId">
                    <label for="flexCheckChecked">@item.Atuacao</label>
                    <br />
                }
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
