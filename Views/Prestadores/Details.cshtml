@model Deal.Models.Prestador

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>
 @{
    var areasAtuacao = ViewBag.areasAtuacao;
 }
<div>
    <h4>Prestador</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Foto
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.FotoPrestador)" alt="" srcset="">
    
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Portfolio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Portfolio.PortfolioId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            CPF
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Idade)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
        <dt class = "col-sm-2">
            CEP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Senha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Senha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            Serviços Realizados
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.QtdServicoRealizados)
        </dd>
        <dt class = "col-sm-2">
            Link do Prestador:
        </dt>
        <dd class = "col-sm-10">
            <input style="display: none;" type="text" value="https://localhost:7234/Prestadores/Details/@Model.PrestadorId" id="linkPrestador">
            <button  onclick="copiarLinkPrestador()" onmouseout="outFunc()" style="width: 300px;">Copiar link do prestador</button>
            <span class="tooltiptext" id="myTooltip"></span>
        </dd>
        <dt class = "col-sm-2">
            Área de Atuação
        </dt>         
        @if (Model.AreasAtuacao != null)
        {
        <dd class ="col-sm-10 areasDeAtuacaoDoPrestador">
            @foreach (var item in areasAtuacao)
            {
            <p>
                <li>@item.Atuacao</li>
            </p>
            }
        </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.PrestadorId">Editar</a> |
    <a asp-action="Index">Retornar</a>
</div>
