@model Deal.Models.UsuarioPrestador
@{
    ViewData["Title"] = "Home";
    Layout = "_LayoutPrestador";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Meu Perfil</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Foto
        </dt>
        <dd class = "col-sm-10">
            <img src="@Html.DisplayFor(model => model.Prestador.FotoPrestador)" alt="" width="300px">
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Nome)
        </dd>
        <dt class = "col-sm-2">
            CPF
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Idade)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Endereco)
        </dd>
        <dt class = "col-sm-2">
            CEP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Cep)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Senha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Senha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Email)
        </dd>
        <dt class = "col-sm-2">
            Acordos Realizados
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.AcordosCancelados)
        </dd>
        <a asp-action="Details" asp-controller="Portfolios" asp-route-id="@Model.Prestador.FkPortfolio" class="btn btn-info" style="width: 200px;">Ver Portfolio</a>
        <a asp-action="ServicosPendentes" asp-controller="Servicos" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-info" style="width: 200px;">Ver Serviços Pendentes<p>@ViewBag.ServicosPresentes</p></a> 
        <a asp-action="FindService" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-info" style="width: 200px;">Buscar Serviços</a>
        <a asp-action="MeusLocais" asp-controller="LocaisDosPrestadores" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-info" style="width: 200px;">Ver Locais de Atuação Atuais</a>
        <a asp-action="AdicionarLocais" asp-controller="LocaisDosPrestadores" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-info" style="width: 200px;">Adicionar Locais De Atuação</a>
        <a asp-action="AcordosPrestador" asp-controller="Acordo" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-info" style="width: 200px;">Ver Acordos</a>
        <a asp-action="Edit" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-info" style="width: 200px;">Editar Perfil</a>
        <a asp-action="Delete" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-danger" style="width: 200px;">Deletar Perfil</a>
    </dl>
</div>