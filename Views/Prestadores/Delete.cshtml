@model Deal.Models.UsuarioPrestador

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutPrestador";
}

<h1>Delete</h1>
<a asp-action="Home" asp-controller="Prestadores" asp-route-id="@Model.Prestador.PrestadorId" class="btn btn-info">Retornar a pagina inicial</a>
<h3>Are you sure you want to delete this?</h3>
