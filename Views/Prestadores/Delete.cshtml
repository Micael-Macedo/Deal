        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Telefone)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Senha)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Senha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Email)
