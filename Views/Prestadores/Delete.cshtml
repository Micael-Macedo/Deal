        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.FotoPrestador)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Portfolio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Portfolio.PortfolioId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Nome)
        </dd>
        <dt class = "col-sm-2">
            CPF
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Cpf)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Prestador.Idade)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Idade)
        </dd>
        <dt class = "col-sm-2">
            Endereço
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.Endereco)
        </dd>
        <dt class = "col-sm-2">
            CEP
        </dt>
        <dd class = "col-sm-10">
