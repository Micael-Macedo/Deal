        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prestador.QtdServicoRealizados)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Prestador.PrestadorId" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Home" asp-route-id="@Model.Prestador.PrestadorId">Retornar</a>
    </form>
</div>
