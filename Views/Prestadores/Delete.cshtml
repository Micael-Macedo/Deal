@model Deal.Models.Prestador

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutPrestador";
}


<div class="container_delete" style="justify-content: left; align-items: left;">

    <h1 style="font-weight: 840; font-size: 45px; margin-bottom: 10px;">Deleter conta</h1>
    <h4>Você tem certeza que deseja cancelar esta conta?</h4>
    <div>
        <hr style="margin: 40px 0 20px;" />
        <dl class="row" style="display: flex; justify-content: left; align-items: left;">
            <dt class="col-sm-2" style="margin: 20px 0 30px;">
                <img style="width: 230px; height: 230px; border-radius: 50%; border: solid blueviolet; "
                    src="@Html.DisplayFor(model => model.FotoPrestador)"></img>
            </dt>
            <dd class="col-sm-10" style="justify-content: left; align-items: left;">

            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Portfolio)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Portfolio.PortfolioId)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                CPF
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cpf)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Idade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Idade)
            </dd>
            <dt class="col-sm-2">
                Endereço
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Endereco)
            </dd>
            <dt class="col-sm-2">
                CEP
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cep)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Telefone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Senha)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Senha)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Serviços Realizados
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.QtdServicoRealizados)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="PrestadorId" />
            <input type="submit" value="Apagar" class="btn btn-vermelho" style="font-weight: 600;" />
            <a asp-action="Home" asp-route-id="@Model.PrestadorId" class="btn btn-roxo"
                style="font-weight: 600;">Retornar</a>
        </form>
    </div>
</div>
