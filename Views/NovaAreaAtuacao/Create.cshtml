@model Deal.Models.NovaAreaAtuacao

@{
    ViewData["Title"] = "Criar";
}

<h1>Criar Nova Área de Atuação</h1>

<h4>Nova Area Atuacao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Nova Área de Atuação </label>
                <input asp-for="NovaAreaAtuacaoId" class="form-control" />
                <span asp-validation-for="NovaAreaAtuacaoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Área de Atuação</label>
                <input asp-for="AreaAtuacao" class="form-control" />
                <span asp-validation-for="AreaAtuacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar</a>
</div>

