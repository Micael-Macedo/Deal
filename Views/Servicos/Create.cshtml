@model Deal.Models.Servico

@{
    ViewData["Title"] = "Create";
}

<h1>Criar Serviço</h1>

<h4>Serviço</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FkCliente" />
            <div class="form-group">
                <label class="control-label">Serviço</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Descrição</label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Endereço</label>
                <input asp-for="Endereco" class="form-control" id="location-input" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" id="administrative_area_level_1-input" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" id="locality-input" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Número</label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">CEP</label>
                <input asp-for="Cep" class="form-control" id="postal_code-input" />
                <span asp-validation-for="Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="Latitude" class="form-control" id="Lat" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input hidden asp-for="Longitude" class="form-control" id="Long" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FkCategoria" class="control-label">Categoria</label>
                <select asp-for="FkCategoria" class ="form-control" asp-items="ViewBag.FkCategoria"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="card-container col-md-4" >
        <div class="map" id="service-gmp-map"></div>
    </div>
</div>

<div>
    <a asp-action="Home" asp-controller="Clientes" asp-route-id="@Model.FkCliente">Retornar</a>
</div>

@section scripts{
    <script src="~/js/maps.js"></script>
}
