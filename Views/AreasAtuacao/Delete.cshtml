@model Deal.Models.AreaAtuacao

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="titulo_formulario">
        <h1 style="font-weight: 840; font-size: 45px;">Tem certeza que deseja apagar essa area de atuação?</h1>
    </div>
<hr />

 <div class="container_formulario">
    <div style="width: 800px;">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AreaAtuacaoId" />
           <div class="item_formulario">
                    <label asp-for="Atuacao" class="control-label" style="font-weight: 600; margin-bottom: 10px;"> Área de atuação</label>
                    <input asp-for="Atuacao" class="form-control" />
                    <span asp-validation-for="Atuacao" class="text-danger"></span>
                </div>
                <div class="botao_formulario">
                    <input type="submit" value="Apagar" class="botao_formulario"
                        style="font-weight: 600; margin-bottom: 10px;" />
                </div>
                <div class="botao_formulario2">
                    <input type="submit" value="Retornar" asp-action="Index" class="botao_formulario" style="font-weight: 600; background-color: #b780e7;"/>
                </div>
        </form>
    </div>
</div>
    